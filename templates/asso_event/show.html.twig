{% extends "base.html.twig" %}

{% block title 'OFNI | Événement' %}

{% block main %}
    <h1>{{ event.name }}</h1>
    <figure>
        <img src="/{{ event.imagePath }}" alt="Illustration de {{ event.name }}">
    </figure>
    <p>{{ event.description | nl2br }}</p>
    <a href="{{ path('event.index') }}" class="btn">Retour à la liste</a>
{% endblock %}
