<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title %}OFNI{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
        {% block stylesheets %}<link rel="stylesheet" href="{{ asset('style.css') }}">{% endblock %}

        {# <meta name="description" content="', $description, '"> #}
        {# <meta name="keywords" content="', $keywords, '"> #}

        {% block javascripts %}
            <script src="{{ asset('js/main.js') }}" async></script>
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Bilbo+Swash+Caps&family=Faculty+Glyphic&family=Figtree:ital,wght@0,300..900;1,300..900&family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Josefin+Sans&display=swap" rel="stylesheet">
    </head>
    <body>
        <header>
            <nav id="navbar">
            <div class="first-container">
                <a href="{{ path('home') }}" class="nav-icon {{ app.current_route == 'home' ? 'active' : ''}}" aria-label="Visit homepage" aria-current="page">
                    {# <img src="./assets/favicon/favicon.jpeg" alt="Web site icon" width="40" loading="lazy"> #}
                    <span>Accueil</span>
                </a>

                {# <div class="main-navlinks">
                    <button class="hamburger" type="button" aria-label="Toggle navigation" aria-expanded="false">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                </div> #}

                <div class="navlinks-container">
                    <a class="{{ app.current_route == 'ofni' ? 'active' : ''}}" href="{{ path('home') }}">L'OFNI</a>
                    <a class="{{ app.current_route == 'event' ? 'active' : ''}}" href="{{ path('home') }}">Événements</a>
                    <a class="{{ app.current_route == 'shop' ? 'active' : ''}}" href="{{ path('home') }}">Boutique</a>
                    <a class="{{ app.current_route == 'connection' ? 'active' : ''}}" href="{{ path('home') }}">Connexion</a>
                </div>
            </div>
        </nav>
            {# {% block header %}{% endblock %} #}
        </header><br><br><br><br><br>



        <main>
            {% block main %}{% endblock %}
        </main>



        <br><br><br>
